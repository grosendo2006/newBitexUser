<%= render 'shared/errors_form' %>
<div class="row">
  <div class="col-md-6">
            <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Alta nuevo usuario</h3>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@user_form) do |form| %>
        <div class="box-body">
          <div class="form-group">
            <%= form.label :first_name, "Nombre:"%>
            <%= form.text_field :first_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :last_name, "Apellido:"%>
            <%= form.text_field :last_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Fecha de nacimiento</label>
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= form.date_field :birth_date, as: :date, class: "form-control"%>
            </div>
          <!-- /.input group -->
          </div>
          <div class="form-group">
            <%= form.label :nationality, "Nacionalidad:"%>
            <%= form.select :nationality, User::NATIONALITIES,{}, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :document, "Dni:"%>
            <%= form.number_field :document, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :document_file_name, "Imagen del dni:"%>
            <%= form.file_field :document_file_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :address, "Direccion:"%>
            <%= form.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :address_file_name, "Imagen de una prueba de su domicilio:"%>
            <%= form.file_field :address_file_name, class: "form-control" %>
          </div>
          <%= form.submit "Guardar", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  <!-- /.box -->
  </div>
</div>